{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ES6",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": ".",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2019",
            "ES2019.Array",
            "ES2020.String"
        ],
        "outDir": "build",
        "plugins": [
            { "transform": "./transformer.ts" }
        ]
    },
    "include": [
        "Extension/**/*"
    ]
}