{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "moduleResolution": "Node",
    "allowUmdGlobalAccess": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": true,
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019",
      "ES2019.Array"
    ],
    "outDir": "build/"
  },
  "include": [
    "Extension/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}