{
  "manifest_version": 2,

  "name": "Better Mixer",
  "version": "3.0.0",

  "icons": {"128": "Icons/icon.png"},

  "short_name": "Better Mixer",
  "description": "Improvements to Mixer.com",

  "author": "Unlocked",

  "permissions": [
    "storage",
    "https://mixer.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://mixer.com/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    "lib/**/*.*",
    "content/**/*.js",
    "content/*.js"
  ]
}
